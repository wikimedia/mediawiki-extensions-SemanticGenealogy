<?xml version="1.0"?>
<ruleset>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="Generic.Files.LineLength.TooLong" />
		<exclude name="MediaWiki.Commenting.FunctionComment.DefaultNullTypeParam" />
		<exclude name="MediaWiki.Commenting.FunctionComment.NotShortBoolParam" />
		<exclude name="MediaWiki.Commenting.FunctionComment.NotShortBoolReturn" />
		<exclude name="MediaWiki.Commenting.FunctionComment.NotShortIntParam" />
		<exclude name="MediaWiki.Commenting.FunctionComment.SpacingBeforeParamType" />
		<exclude name="MediaWiki.Commenting.LicenseComment.InvalidLicenseTag" />
		<exclude name="MediaWiki.Commenting.LicenseComment.LicenceTag" />
		<exclude name="MediaWiki.Files.ClassMatchesFilename.NotMatch" />
		<exclude name="Squiz.WhiteSpace.OperatorSpacing.NoSpaceAfter" />
		<exclude name="Squiz.WhiteSpace.OperatorSpacing.NoSpaceBefore" />
	</rule>
	<file>.</file>
	<arg name="extensions" value="php" />
	<arg name="encoding" value="UTF-8" />
	<exclude-pattern>vendor</exclude-pattern>
	<exclude-pattern>node_modules</exclude-pattern>
	<exclude-pattern>extensions</exclude-pattern>
</ruleset>
